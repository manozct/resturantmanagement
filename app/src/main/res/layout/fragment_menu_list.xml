<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollViewEmployeeList"
    android:background="@color/teal"
    tools:context="rms.manozct.resturantmanagement.fragment.MenuListFragment">


    <ScrollView
        android:id="@+id/hscrll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <Button
                style="@style/ButtonNormalSubmit"
                android:id="@+id/addMenuBtn"
                android:text="Add New Menu"
                android:layout_marginBottom="10dp"/>

            <TableLayout
                android:id="@+id/table_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >
            </TableLayout>


        </LinearLayout>
    </ScrollView>


</ScrollView>
