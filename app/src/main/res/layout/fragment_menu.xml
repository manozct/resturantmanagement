<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rms.manozct.resturantmanagement.fragment.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/info_text_view"
            android:text="Add Main Menu"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <EditText
            style="@style/info_edit_text"
            android:id="@+id/menuTxt"/>

    <Button android:id="@+id/submitBtn"
        style="@style/ButtonNormalSubmit"
       android:layout_marginBottom="10dp"
        android:text="Submit"/>
        <Button android:id="@+id/deleteBtn"
            style="@style/ButtonNormalDelete"
            android:layout_marginBottom="10dp"
            android:text="Delete"/>
    </LinearLayout>
</ScrollView>
